<% include partials/header2 %>
<section class="container">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 col-xs-12 card card-body bg-light" >
            <h1 class="text-center" >Welcome!</h1>
            <h5 class="m-2 text-center" >Let's log you in</h5>
            <br>
            <form class="text-center" action="/login" method="POST">
                <div class="d-flex flex-column align-items-start">
                    <label for="username">Username:</label>
                    <input class="form-control m-2" type="text" id="username" name="username" placeholder="Username">
                </div>
                <div class="d-flex flex-column align-items-start">
                    <label for="password">Password:</label>
                    <input class="form-control m-2" type="password" id="password" name="password" placeholder="Password">
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-9 col-sm-10 col-xs-12">
                        <button class="btn btn-md btn-primary btn-block m-2">Submit</button>
                    </div>
                </div>
            </form>
            <p class="text-center">or</p>
            <p class="text-center">Sign in with <a class="no-underline" href="/google/auth/google"><span style="color: #4183F1">G</span><span style="color: #EA4335">o</span><span style="color: #FBBC05">o</span><span style="color: #4183F1">g</span><span style="color: #34A853">l</span><span style="color: #EA4335">e</span></a></p>
            <p class="text-center">Sign in with <a class="no-underline" href="/facebook/auth/facebook"><b><span style="color: #4183F1">facebook</span></b>
            <hr>
            <!-- <p class="text-center">Not a member? <a href="/register">Register</a></p> -->
        </div>
    </div>
</section>
