<% include partials/header %>
<section class="container">
    <div class="row justify-content-center">
        <div class="m-5 col-lg-6 col-md-8 col-sm-10 col-xs-12 card card-body bg-light">
            <h1 class="text-center">Create Account</h1>
            <h5 class="m-2 text-center">...so, you are able to send your reports</h5>
            <form class="text-center p-2" action="/register" method="POST">
                <input class="form-control m-2" type="text" name="username" placeholder="Firstname">
                <input class="form-control m-2" type="password" name="password" placeholder="password">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-9 col-sm-10 col-xs-12">
                        <button class="btn btn-md btn-primary btn-block m-2">Submit</button>
                    </div>
                </div>
            </form>
            <hr>
            <p class="text-center">Already a member? <a href="/login">Login</a></p>
        </div>
    </div>
</section>
<% include partials/footer %>