<% include ./../partials/header %>

<div class="heading">
    <h1 class="text-center">Welcome</h1>
    <hr/>
    <p class="text-center">Report, your prayer group participation here</p>
</div>

<main class="container">
    <div class="container">
        <form action="/prayergroup" method="POST" class="form-group" id="prayer-group-report">
            <select class="form-control my-1 col-md-6 mx-auto" name="coordinator" required>
                <option value="">-Select prayer group leader-</option>
                <% foundLMA.forEach((item)=>{ %>
                    <option value="<%= item._id %>"><%= item.firstname %> <%= item.surname %></option>
                <% }) %> 
            </select>
            <input class="form-control my-1 col-md-6 mx-auto" type="text" name="firstname" placeholder="Your firstname" required />
            <input class="form-control my-1 col-md-6 mx-auto" type="text" name="surname" placeholder="Your surname" required />
            <div class="d-flex my-1 col-md-6 mx-auto form-group">
                <label class="col-md-6 pt-3 mr-2">Arrival Time:</label>
                <input class="form-control my-1 col-md-6" type="time" name="arrival" placeholder="time" min="<%= moment().subtract(5, 'hour').format("HH:mm")%>" max="<%= moment().format("HH:mm")%>" required />
            </div>
            <select class="form-control my-1 col-md-6 mx-auto" name="status" required>
                <option value="">-Select your Status-</option>
                <option value="LMA">LMA</option>
                <option value="Cell Leader">Cell Leader</option>
                <option value="Worker">Worker</option>
                <option value="Member">Member</option>
            </select>
            <select class="form-control my-1 col-md-6 mx-auto" name="zone" required>
                <option value="">-Select your Zone-</option>
                <option value="Akoka">Akoka</option>
                <option value="Bariga">Bariga</option>
                <option value="Ketu">Ketu</option>
                <option value="Mushin">Mushin</option>
                <option value="Sabo">Sabo</option>
                <option value="Somolu">Somolu</option>
                <option value="Surulere">Surulere</option>
            </select>
            <select class="form-control my-1 col-md-6 mx-auto" name="prayer-group" required>
                <option value="">-Select your Prayer Group-</option>
                <option value="Monday">Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday">Friday</option>
                <option value="Saturday morning">Saturday morning</option>
                <option value="Saturday evening">Saturday evening</option>
                <option value="Sunday">Sunday</option>
            </select>
            
            <input class="form-control my-1 col-md-6 mx-auto" type="text" name="code" placeholder="Code" required />
            <div class="my-1 col-md-6 mx-auto">
                <input type="submit" value="Submit" class="btn-block btn my-1 col-md-6 mx-auto text-center" />
            </div>
        </form>
    </div>
</main>
<% include ./../partials/footer %>