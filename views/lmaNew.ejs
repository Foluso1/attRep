<% include partials/header %>
<div class="heading">
    <!-- <h1>Attendance <span>Report</span> Generator</h1>
    <h2 class="head">An app to simplify generating attendance reports</h2> -->
    <p></p>
    <!-- <p>You are logged in as <span><b><%= //loggedInWorker.username %></b></span>:<input class="form-control input-class" type="text" id="addNewWorker" name="name"
            placeholder="Add new worker to database" /></p> -->
    <a class="btn btn-primary btn-sm" href="/disciple/new">Add New Disciple</a>
    <a class="btn btn-success btn-sm" href="/report/new">Write New Report</a>
    <a class="btn btn-success btn-sm" href="/prayer">Prayer Report</a>
    <a class="btn btn-success btn-sm" href="/lma">Back to LMA Admin</a>
</div>

<main class="row">
    <div class="col-md-12">
        <div class="list-workers">
            <!-- <h3></h3> -->
            <ol>
                <% workerCheck.forEach((foundWorker) => { %>
                    <li style="display: flex; justify-content: space-between;" _id="<%= foundWorker._id %>">
                        <%= foundWorker.username %>
                        <form action="/lma" method="POST" class="worker-list-remove">
                            <input style="display: none" type="text" name="id" value="<%= foundWorker._id %>">
                            <button class="btn btn-sm btn-danger" _id="<%= foundWorker._id %>">Remove Worker</button>
                        </form>
                    </li>
                    <hr>
                <% }); %>
                <% addWorker.forEach((foundWorker) => { %>
                    <li style="display: flex; justify-content: space-between;" _id="<%= foundWorker._id %>">
                        <%= foundWorker.username %>
                        <form action="/lma" method="POST" class="worker-list">
                            <input style="display: none" type="text" name="id" value="<%= foundWorker._id %>">
                            <button class="btn btn-sm btn-primary" _id="<%= foundWorker._id %>">Add Worker</button>
                        </form>
                    </li>
                    <hr>
                <% }); %>
            </ol>
            <div class="col-lg-4 col-md-6 col-sm-8 col-xs-10">
            </div>
            <p></p>
            <hr />
            <p></p>
            </br>
        </div>
        <p></p>
    </div>
</main>
<p></p>
<p></p>
<% include partials/footer %>