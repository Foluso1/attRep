<% include partials/header %>
</div>
<section class="container">
    <div class="row justify-content-center">
        <div class="m-3 col-lg-6 col-md-8 col-sm-10 col-xs-12 card card-body bg-light">
            <h1 class="text-center">Your Profile</h1>
            <h5 class="m-2 text-center">Welcome <%= loggedInWorker.firstname %>&nbsp;<%= loggedInWorker.surname %></h5>
            <form class="text-center p-2" action="/profile?_method=PUT" method="POST">
                <fieldset class="m-4">
                    <legend>Login Credentials</legend>
                    <hr>
                    <% if(loggedInWorker.googleIdentity){ %>
                        <p>Your account is linked to 
                            <span style="color: #4183F1">G</span><span style="color: #EA4335">o</span><span style="color: #FBBC05">o</span><span style="color: #4183F1">g</span><span style="color: #34A853">l</span><span style="color: #EA4335">e</span>!
                            </p>
                    <% } else { %>
                        <p>Would you like to link your Google account? <a class="btn btn-sm btn-primary" href="/google/auth/google">Yes</a></p>
                    <% } %>
                    <% if(loggedInWorker.facebookIdentity){ %>
                        <p>Your account is linked to 
                            <b><span style="color: #4183F1">facebook</span></b>!
                            </p>
                    <% } else { %>
                        <p>Would you like to link your facebook account? <a class="btn btn-sm btn-primary" href="/facebook/auth/facebook">Yes</a></p>
                    <% } %>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="username">Username:</label>
                        <input class="m-1 float-left form-control" type="text" id="username" name="username" value="<%= loggedInWorker.username %>" placeholder="Firstname">
                    </div>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="firstname">Firstname:</label>
                        <input class="m-1 float-left form-control" type="text" id="firstname" name="firstname" value="<%= loggedInWorker.firstname %>" placeholder="Firstname">
                    </div>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="surname">Surname:</label>
                        <input class="m-1 float-left form-control" type="text" id="surname" name="surname" value="<%= loggedInWorker.surname %>" placeholder="Surname">
                    </div>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="email">Email:</label><span class="m-2 text-right"><%= loggedInWorker.email %></span>
                    </div>
                </fieldset>
                <fieldset class="m-4">
                    <legend>Church Details</legend>
                    <hr>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="church">Church:</label>
                        <select class="m-1 form-control" name="church" id="church">
                            <option value="<%= profile.church %>"><%= loggedInWorker.church %></option>
                            <option value="Yaba">Yaba</option>
                        </select>
                    </div>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="fellowship">Fellowship:</label>
                        <select class="m-1 form-control" name="fellowship" id="fellowship">
                            <option value="<%= profile.fellowship %>"><%= loggedInWorker.fellowship %></option>
                            <option value="Yabatech">Yabatech</option>
                            <option value="New Garage">New Garage</option>
                        </select>
                    </div>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="department">Department:</label>
                        <select class="m-1 form-control" name="department" id="department">
                            <option value="<%= profile.department %>"><%= loggedInWorker.department %></option>
                            <option value="Technical Team">Technical Team</option>
                            <option value="Display Team">Display Team</option>
                            <option value="Guest Ministries">Guest Ministries</option>
                            <option value="Security">Security</option>
                            <option value="Operations Division">Operations Division</option>
                            <option value="Works">Works</option>
                            <option value="Worship Arts">Worship Arts</option>
                            <option value="Children Ministry">Children Ministry</option>
                            <option value="Livingword Media">Livingword Media</option>
                        </select>
                    </div>
                    <div class="d-flex m-2">
                        <label class="m-2 float-left" for="prayerGroup">Prayer Group:</label>
                        <select class="m-1 form-control" name="prayerGroup" id="prayerGroup">
                            <option value="<%= profile.prayerGroup %>"><%= loggedInWorker.prayerGroup %></option>
                            <option value="Sunday">Sunday</option>
                            <option value="Monday">Monday</option>
                            <option value="Tuesday">Tuesday</option>
                            <option value="Thursday">Thursday</option>
                            <option value="Friday">Friday</option>
                            <option value="Saturday Morning">Saturday Morning</option>
                            <option value="Saturday Evening">Saturday Evening</option>
                        </select>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-8 col-md-9 col-sm-10 col-xs-12">
                            <input type="submit" class="btn btn-md btn-primary btn-block m-2"></input>
                        </div>
                    </div>
                </fieldset>
            </form>
            
        </div>
    </div>
</section>
<% include partials/footer %>