<% include ./../partials/header %>
</div>

<main class="container">
    <div class="col-md-12">
        <h3>My Prayer Chain Report</h3>
        <div class="container">
            <% if(foundPrayerChain){ %>
                <% if(foundPrayerChain.start && foundPrayerChain.end == null){ %>
                    <a class="btn btn-primary btn-sm" href="/prayerchain/new">End Praying</a>
                <% } else if (foundPrayerChain.end) { %>
                <% } %>
            <% } else { %>
                <a class="btn btn-primary btn-sm" href="/prayerchain/new">Start Praying</a>
            <% } %>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label class="m-2 pl-2">Start Date: </label>
                <input type="date" name="" data-id="<%= loggedInWorker._id %>" class="date-chooser-pr-chain form-control mx-2" value="<%= moment().startOf('week').format('YYYY-MM-DD')%>" min="<%= moment('2021-02-21').format('YYYY-MM-DD')%>" max="<%= moment().format('YYYY-MM-DD')%>" />
            </div>
            <div class="col-sm-6">
                <label class="m-2 pl-2">End Date: </label>
                <input type="date" name="" data-id="<%= loggedInWorker._id %>" class="date-chooser-pr-chain form-control mx-2" value="<%= moment().format('YYYY-MM-DD')%>" min="<%= moment('2021-02-21').format('YYYY-MM-DD')%>" max="<%= moment().format('YYYY-MM-DD')%>" />
            </div>
        </div>
        </br>
        <h5>Prayer Ratio: <span id="prayer-ratio"></span></h5>
        <table id="prayer-chain-table">
            <thead>
                <td><b>Day</b></td>
                <td><b>Start</b></td>
                <td><b>End</b></td>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</main>
<p></p>
<p></p>
<% include ./../partials/footer %>